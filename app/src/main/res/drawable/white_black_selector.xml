<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"> 
        <shape> 
            <stroke
		        android:width="3px"	android:color="#dc2222" />
	    	<gradient
		        android:angle="0" android:endColor="#dc2222"
		        android:startColor="#dc2222" />
    		<corners
		        android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip"
		        android:topLeftRadius="3dip" android:topRightRadius="3dip" />

    		<padding
		        android:bottom="10dp" android:left="10dp"
		        android:right="10dp" android:top="10dp" />
        </shape> 
    </item> 
  
    <item android:state_focused="true"> 
        <shape> 
            <stroke
		        android:width="3px"	android:color="#dc2222" />
	    	<gradient
		        android:angle="0" android:endColor="#dc2222"
		        android:startColor="#dc2222" />
    		<corners
		        android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip"
		        android:topLeftRadius="3dip" android:topRightRadius="3dip" />

    		<padding
		        android:bottom="10dp" android:left="10dp"
		        android:right="10dp" android:top="10dp" />
        </shape> 
    </item> 
  
    <item> 
        <shape> 
            <stroke
		        android:width="3px"	android:color="#ef2222" />
	    	<gradient
		        android:angle="0" android:endColor="#ef2222"
		        android:startColor="#ef2222" />
    		<corners
		        android:bottomLeftRadius="3dip" android:bottomRightRadius="3dip"
		        android:topLeftRadius="3dip" android:topRightRadius="3dip" />

    		<padding
		        android:bottom="10dp" android:left="10dp"
		        android:right="10dp" android:top="10dp" />
        </shape> 
    </item> 
</selector>