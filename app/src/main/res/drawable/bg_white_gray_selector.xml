<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#ffdddddd"
                android:endColor="#ffdddddd"
                android:startColor="#ffdddddd" />
            <padding
                android:bottom="14dp"
                android:left="@dimen/widget_padding_medium"
                android:right="@dimen/widget_padding_medium"
                android:top="14dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#ffdddddd"
                android:endColor="#ffdddddd"
                android:startColor="#ffdddddd" />
            <padding
                android:bottom="14dp"
                android:left="@dimen/widget_padding_medium"
                android:right="@dimen/widget_padding_medium"
                android:top="14dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />
            <padding
                android:bottom="14dp"
                android:left="@dimen/widget_padding_medium"
                android:right="@dimen/widget_padding_medium"
                android:top="14dp" />
        </shape>
    </item>
</selector>