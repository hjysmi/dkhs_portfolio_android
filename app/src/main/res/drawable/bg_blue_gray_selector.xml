<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#3c89e7"
                android:endColor="#3c89e7"
                android:startColor="#3c89e7" />
            <padding
                android:bottom="14dp"
                android:left="@dimen/widget_padding_medium"
                android:right="@dimen/widget_padding_medium"
                android:top="14dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#3c89e7"
                android:endColor="#3c89e7"
                android:startColor="#3c89e7" />
            <padding
                android:bottom="14dp"
                android:left="@dimen/widget_padding_medium"
                android:right="@dimen/widget_padding_medium"
                android:top="14dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/theme_blue"
                android:endColor="@color/theme_blue"
                android:startColor="@color/theme_blue" />
            <padding
                android:bottom="14dp"
                android:left="@dimen/widget_padding_medium"
                android:right="@dimen/widget_padding_medium"
                android:top="14dp" />
        </shape>
    </item>
</selector>