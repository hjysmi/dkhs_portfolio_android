<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边缘线的宽度和颜色 -->

    <stroke
        android:width="1px"
        android:color="#d0d0d0" />

    <!-- 中间渐变，角度0从左往右，正值为逆时针，270度为从上到下 -->

    <gradient
        android:angle="270"
        android:centerColor="@color/theme_gray"
        android:endColor="@color/theme_gray"
        android:startColor="@color/theme_gray" />

    <!-- 设置四个角的角度 -->

    <corners
        android:radius="30dp" />

    <!-- 设置padding -->

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>