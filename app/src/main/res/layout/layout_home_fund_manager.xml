<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp"
    android:gravity="center_vertical"
    style="@style/home_page_item_style"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_avatar"
        android:src="@drawable/default_head"
        android:layout_width="44dp"
        android:layout_height="44dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#262932"
            android:text="王亚伟"/>
        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#969696"
            android:singleLine="true"
            android:text="华夏基金管理有限公司"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#969696"
            android:text="周收益率"/>
        <TextView
            android:id="@+id/tv_week_profit_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF6363"
            android:textSize="15sp"
            android:text="10.15%"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_week_win_rate"
        android:layout_marginLeft="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#969696"
            android:text="周跑赢大盘"/>
        <TextView
            android:id="@+id/tv_week_win_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#FF6363"
            android:text="10.15%"/>
    </LinearLayout>
</LinearLayout>
