<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rootView"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/activity_bg_color">

    <LinearLayout android:id="@+id/main_ll"
                  style="@style/white_grayborder_layout"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:descendantFocusability="blocksDescendants"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <ImageView
                android:id="@+id/iv_avatar"

                style="@style/lv_avatar_style"
                android:layout_marginBottom="16dp"
                />

            <ImageView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_image_right"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:gravity="top"
                android:text="dfdfdf"
                android:textColor="@color/black"
                android:textSize="@dimen/text_status_username"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_toLeftOf="@+id/detail"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_avatar"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/flowedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/gray_textcolor"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/flowingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textColor="@color/gray_textcolor"
                    android:textSize="17sp"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>