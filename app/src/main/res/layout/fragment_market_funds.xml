<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/view_stock_title"
        style="@style/gray_text_tabline"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:weightSum="7">

        <RelativeLayout
            android:id="@+id/rl_fund_type"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_fund_type"
                style="@style/gray_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:paddingRight="12dp"
                android:text="@string/all"
                android:textColor="@color/menu_title_text_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_current"
                style="@style/gray_title_text"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:text="@string/market_net_value"
                android:textColor="@color/theme_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_percentage"
                style="@style/gray_title_text"
                android:singleLine="true"
                android:drawablePadding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/day_income"
                android:textColor="@color/menu_title_text_color" />
        </RelativeLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/view_datalist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_stock_title" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_stock_title"></RelativeLayout>


</RelativeLayout>