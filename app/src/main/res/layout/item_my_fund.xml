<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/activity_bg_color"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:background="@color/drivi_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/widget_padding_medium"
        android:paddingBottom="@dimen/widget_padding_medium"
        android:paddingLeft="@dimen/widget_padding_medium"
        android:background="@drawable/bg_white_selector">

        <TextView
            android:id="@+id/tv_fund_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/widget_text_16sp"
            android:textColor="@color/black"
            android:text="景顺长城增量永信(2090050)"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_marginTop="@dimen/widget_margin_normal"
            android:background="@color/drivi_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_16sp"
                    android:textColor="@color/gray_textcolor"
                    android:text="@string/recent_profit_fund"
                    />
                <TextView
                    android:id="@+id/tv_recent_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_18sp"
                    android:textColor="@color/red"
                    android:text="500.00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_16sp"
                    android:textColor="@color/gray_textcolor"
                    android:text="@string/total_profit_fund"
                    />
                <TextView
                    android:id="@+id/tv_total_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_18sp"
                    android:textColor="@color/black"
                    android:text="2500.00"
                    />

                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_16sp"
                    android:textColor="@color/gray_textcolor"
                    android:text="@string/percent_new"
                    />
                <TextView
                    android:id="@+id/tv_percent_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_18sp"
                    android:textColor="@color/black"
                    android:text="20%"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_16sp"
                    android:textColor="@color/gray_textcolor"
                    android:text="@string/fund_value"
                    />
                <TextView
                    android:id="@+id/tv_fund_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:textSize="@dimen/widget_text_18sp"
                    android:textColor="@color/black"
                    android:text="50000.00"
                    />

                </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/drivi_line"/>

</LinearLayout>