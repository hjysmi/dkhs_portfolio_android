<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
       android:background="@drawable/bg_dkimgtextmsg"
        android:layout_margin="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="6dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:id="@+id/tv_title"
            style="@style/CommonTextAppearance_Middle_Black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:id="@+id/tv_date_line"
           style="@style/CommonTextAppearance_super_Mini_Gray"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <com.dkhs.portfolio.ui.widget.ScaleLayout
            android:layout_width="fill_parent"
            android:id="@+id/scaleLayout"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:scale="0.5625"
            android:layout_height="0dp">
        <ImageView
            android:id="@+id/im_content"
            android:layout_width="fill_parent"
            android:scaleType="centerCrop"
            android:layout_height="fill_parent" />
        </com.dkhs.portfolio.ui.widget.ScaleLayout>

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/tv_content"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            style="@style/CommonTextAppearance_Mini_Gray"
            android:textColor="@color/text_content_color"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="8dp"
            style="@style/divider_line"
            />
        <TextView
            android:layout_width="fill_parent"
            android:text="@string/detail"

            android:padding="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            style="@style/CommonTextAppearance_Mini_Black"
            android:drawableRight="@drawable/setting_image_right"
            android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>