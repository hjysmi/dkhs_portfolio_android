<?xml version="1.0" encoding="utf-8"?>
<com.dkhs.portfolio.ui.widget.InterceptScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sc_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/combination_layout"
            android:layout_width="match_parent"
            android:layout_height="600dp" />

        <View style="@style/divider_line" />

        <RelativeLayout
            android:id="@+id/combination_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_position_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/text_no_open"
                android:textColor="@color/combition_gray" />
        </RelativeLayout>
    </LinearLayout>

</com.dkhs.portfolio.ui.widget.InterceptScrollView>