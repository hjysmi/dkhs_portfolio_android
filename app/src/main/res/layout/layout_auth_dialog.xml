<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whilte">

    <com.android.percent.PercentLinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="认证错误"
            android:textColor="@color/color_title_text"
            app:layout_heightPercent="15%w"
            app:layout_textSizePercent="6%w" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="身份证号码格式错误"
            android:textColor="@color/color_title_text"
            app:layout_textSizePercent="6%w" />
    </com.android.percent.PercentLinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_title"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="5%w"
        android:background="@color/drivi_line" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:text="确定"
        android:textColor="@color/blue"
        app:layout_heightPercent="15%w"
        app:layout_textSizePercent="6%w" />
</com.android.percent.PercentRelativeLayout>