<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:id="@+id/rootView"
                android:layout_height="wrap_content"
                android:background="@color/activity_bg_color">

    <LinearLayout
        android:id="@+id/main_ll"
        style="@style/white_grayborder_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">


            <ImageView
                android:id="@+id/iv_avatar"
                style="@style/lv_avatar_style"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:gravity="top"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_time"
                style="@style/CommonTextAppearance_super_Mini_Gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_avatar"
                android:layout_toRightOf="@+id/iv_avatar"
                android:textSize="13sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/titleTV"
            style="@style/CommonTextAppearance_Middle_Black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp"/>

        <com.dkhs.portfolio.ui.widget.DKHSTextView
            android:id="@+id/content"
            style="@style/CommonTextAppearance_Middle_Gray"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxHeight="600px"
            android:maxWidth="238px"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            />

        <View
            style="@style/divider_line"

            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_commend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparency_gray_selector"
                android:paddingBottom="8dp"

                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_commend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:drawableLeft="@drawable/ic_coment"
                    android:gravity="center"
                    android:text="@string/comment"
                    android:textColor="@color/tag_gray"
                    android:textSize="14sp"/>
            </FrameLayout>

            <View
                style="@style/vertical_divider_line"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>

            <FrameLayout
                android:id="@+id/fl_star"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparency_gray_selector"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_like"
                        android:src="@drawable/ic_unlike"/>

                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/like"
                        android:textColor="@color/tag_gray"
                        android:textSize="14sp"/>


                </LinearLayout>


            </FrameLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_below="@+id/main_ll"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>