<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fund_supervision_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/widget_margin_medium"
        android:layout_marginTop="@dimen/widget_margin_medium"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/unionpay_width"
            android:layout_height="@dimen/select_image"
            android:background="@drawable/ic_unionpay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/select_image"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/widget_text_10sp"
            android:text="@string/fund_supervision_bank"
            android:textColor="@color/gray_textcolor"
            android:textSize="@dimen/widget_text_14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_margin_medium"
        android:layout_marginRight="@dimen/widget_margin_medium"
        android:background="@drawable/item_bankcard_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bank_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/widget_margin_medium" />

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_bank_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国建设银行"
                android:textColor="@color/white"
                android:textSize="@dimen/widget_text_16sp" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*某某"
                android:textColor="@color/white"
                android:textSize="@dimen/widget_text_16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll_info"
            android:text="**** **** **** 1111"
            android:textColor="@color/white"
            android:textSize="@dimen/widget_text_24sp" />
    </RelativeLayout>

    <View
        android:id="@+id/seperate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_margin_medium" />

    <TextView
        android:id="@+id/tv_addbank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_margin_medium"
        android:layout_marginRight="@dimen/widget_margin_medium"
        android:background="@drawable/bg_white_gray_selector"
        android:gravity="center"
        android:text="+添加银行卡"
        android:textColor="@color/edit_textcolor"
        android:textSize="20sp"
        android:visibility="visible" />

</LinearLayout>