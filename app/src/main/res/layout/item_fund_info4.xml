<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/widget_padding_large"
                android:paddingTop="@dimen/widget_padding_small"
                android:paddingBottom="@dimen/widget_padding_small"
                android:background="@drawable/bg_white_gray_selector">

    <TextView
        android:id="@+id/tv_trade_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_text_14sp"
        android:text="2015-09-22 14:10:00"
        />
    <TextView
        android:id="@+id/tv_bank_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_margin_small"
        android:layout_below="@id/tv_trade_time"
        android:layout_alignLeft="@id/tv_trade_time"
        android:textColor="@color/gray_textcolor"
        android:textSize="@dimen/widget_text_12sp"
        android:text="工商银行 尾号5200"
        />

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:src="@drawable/setting_image_right"/>
    <TextView
        android:id="@+id/tv_trade_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/widget_margin_small"
        android:layout_marginRight="@dimen/widget_margin_small"
        android:textSize="@dimen/widget_text_12sp"
        android:text="买入"
        />
    <TextView
        android:id="@+id/tv_trade_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_trade_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/widget_margin_small"
        android:textColor="@color/gray_textcolor"
        android:textSize="@dimen/widget_text_12sp"
        android:text="5200.00元"
        />

</RelativeLayout>