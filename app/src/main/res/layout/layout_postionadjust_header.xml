<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!-- 持仓组合 创建信息 -->

    <ViewStub
        android:id="@+id/portfolio_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout="@layout/layout_adjust_conbin_info" />

    <include
        android:id="@+id/create_portfolio_info"
        layout="@layout/layout_create_conbina_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- 持仓组合 创建信息 end -->

    <RelativeLayout
        android:id="@+id/rl_combinationvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/position_text_createdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="2014-01-05-10:00"
            android:textColor="@color/position_text_lgray"
            android:textSize="@dimen/title_text_font" />

        <TextView
            android:id="@+id/position_text_valuename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="当日净值:"
            android:textColor="@color/position_text_lgray"
            android:textSize="@dimen/title_text_font" />

        <TextView
            android:id="@+id/position_text_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/position_text_createdate"
            android:layout_toRightOf="@id/position_text_valuename"
            android:paddingLeft="5dp"
            android:text="-"
            android:textColor="@color/red"
            android:textSize="@dimen/list_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_myconfig_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/theme_color"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="@string/my_config"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_add_postional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_border_gray_selector"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:text="@string/add_postional" />
    </RelativeLayout>

    <!-- 净值占比饼图 -->

    <include
        layout="@layout/layout_pieview"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="初始净值：1.0000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_border_gray_selector"
            android:paddingBottom="3dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:text="均分占比"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- 净值占比饼图 End -->

    <View style="@style/divider_line" />
</LinearLayout>