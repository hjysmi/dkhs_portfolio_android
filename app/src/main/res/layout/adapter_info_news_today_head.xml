<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apo="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="46.7%w"
        app:layout_widthPercent="100%w">

        <com.dkhs.portfolio.ui.widget.ScaleImageView
            android:id="@+id/iv_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_img_thumbnail"
            apo:scale="1"
             />

        <com.android.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            app:layout_heightPercent="20%h"
            app:layout_widthPercent="100%w">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/widget_margin_medium"
                android:textColor="@color/black_60"
                app:layout_textSizePercent="42%h" />
        </com.android.percent.PercentRelativeLayout>
    </com.android.percent.PercentRelativeLayout>

</com.android.percent.PercentLinearLayout>