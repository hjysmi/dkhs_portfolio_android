<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_balance_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray_textcolor"
            android:text="现金余额(元)"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_balance"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/theme_blue"
            android:text="25000.00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_balance_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/btn_change_balance"
            android:text="充值"/>
        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/activity_bg_color"/>
        <TextView
            android:id="@+id/btn_balance_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/btn_change_balance"
            android:text="提现"/>
    </LinearLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="8dp"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <com.dkhs.portfolio.ui.widget.PullToRefreshListView
        android:id="@+id/lv_trading_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>