<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activity_bg_color"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/tab_2"

            style="@style/bottom_tab_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:clickable="true">

            <ImageView
                android:id="@+id/btn_tab2"
                style="@style/bottom_tab_button"
                android:layout_marginTop="7dp"
                android:background="@drawable/cb_bar_market" />

            <TextView
                android:id="@+id/tv_tab2"
                style="@style/bottom_tab_text"
                android:layout_below="@+id/btn_tab2"
                android:text="@string/tab_2" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_1"
            style="@style/bottom_tab_layout">

            <ImageView
                android:id="@+id/btn_tab1"
                style="@style/bottom_tab_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:background="@drawable/cb_bar_stock"
                android:button="@null"
                android:clickable="false" />

            <TextView
                android:id="@+id/tv_tab1"
                style="@style/bottom_tab_text"
                android:layout_below="@+id/btn_tab1"
                android:text="@string/tab_1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_3"
            style="@style/bottom_tab_layout">

            <ImageView
                android:id="@+id/btn_tab3"
                style="@style/bottom_tab_button"
                android:layout_marginTop="7dp"
                android:background="@drawable/cb_bar_shake" />

            <TextView
                android:id="@+id/tv_tab3"
                style="@style/bottom_tab_text"
                android:layout_below="@+id/btn_tab3"
                android:text="@string/tab_5" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_4"
            style="@style/bottom_tab_layout">

            <ImageView
                android:id="@+id/btn_tab4"
                style="@style/bottom_tab_button"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_reward" />

            <TextView
                android:id="@+id/tv_tab4"
                style="@style/bottom_tab_text"
                android:layout_below="@+id/btn_tab4"
                android:text="@string/tab_reward" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_5"
            style="@style/bottom_tab_layout">

            <ImageView
                android:id="@+id/btn_tab5"
                style="@style/bottom_tab_button"
                android:layout_marginTop="7dp"
                android:background="@drawable/cb_bar_user" />

            <TextView
                android:id="@+id/tv_new_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/btn_tab5"
                android:background="@drawable/bg_bottom_new"
                android:text=""
                android:textColor="@color/white"
                android:textSize="1sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tv_tab5"
                style="@style/bottom_tab_text"
                android:layout_below="@+id/btn_tab5"
                android:text="@string/tab_4" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/divider_line"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/compare_select_gray" />

</RelativeLayout>