<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_white_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_user_head"
        app:layout_heightPercent="10%w"
        app:layout_widthPercent="10%w"
        app:layout_marginTopPercent="3%w"
        app:layout_marginBottomPercent="3%w"
        app:layout_marginLeftPercent="5%w"/>

    <com.android.percent.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_head"
        app:layout_heightPercent="10%w"
        app:layout_marginTopPercent="3%w"
        app:layout_marginBottomPercent="3%w"
        app:layout_marginLeftPercent="2%w"
        app:layout_widthPercent="50%w">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:singleLine="true"
            app:layout_marginTopPercent="1%w"
            android:textColor="@color/black"
            app:layout_textSizePercent="8%w" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_marginBottomPercent="1%w"
            android:textColor="@color/gray_textcolor"
            app:layout_textSizePercent="5%w"/>
    </com.android.percent.PercentRelativeLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_fundarrowright"
        app:layout_heightPercent="5%w"
        app:layout_marginRightPercent="5%w"
        app:layout_widthPercent="5%w" />
    <View
        android:layout_alignParentBottom="true"
        style="@style/divider_line"
        />
</com.android.percent.PercentRelativeLayout>