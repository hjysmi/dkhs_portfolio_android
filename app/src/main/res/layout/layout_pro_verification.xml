<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pro_ver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/combin_horSpacing"
        android:background="@color/person_setting_backgroud" />

    <RelativeLayout
        android:id="@+id/setting_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <TextView
            android:id="@+id/tv_real_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_real_name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="亚伟" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_id_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <TextView
            android:id="@+id/tv_id_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="身份证"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_id_card_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="350678925012121" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <TextView
            android:id="@+id/tv_city_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="现居城市"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_city_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="厦门" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_verified_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <TextView
            android:id="@+id/tv_verified_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="认证类型"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_verified_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="投资达人" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_cert_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <TextView
            android:id="@+id/tv_cert_no_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="执业编码"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_cert_no_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="CE545654" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_organize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <TextView
            android:id="@+id/tv_organize_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="所属机构"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_organize_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="招商证券" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_selector">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentTop="true"
            android:background="@color/person_setting_line" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="30dp"
            android:src="@drawable/setting_image_right" />

        <TextView
            android:id="@+id/tv_material_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="资质材料"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_text_name" />

        <TextView
            android:id="@+id/tv_material_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_material_title"
            android:ellipsize="end"
            android:gravity="right"
            android:paddingLeft="40dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:textColor="@color/person_setting_phonecolor"
            android:textSize="@dimen/setting_text_phone"
            tools:text="招商证券" />
    </RelativeLayout>

</LinearLayout>
