<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/person_setting_backgroud"
    android:id="@+id/rootView"
    tools:context="com.dkhs.portfolio.ui.RewardDetailActivity">

    <com.dkhs.portfolio.ui.widget.DKHSTextView
        android:layout_width="fill_parent"
        android:id="@+id/ignoreTV"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="fill_parent"
        android:id="@+id/srl"
        android:layout_height="fill_parent">
    <com.dkhs.portfolio.ui.widget.RewardDetailScrollView
        android:layout_width="fill_parent"
        android:id="@+id/tsv"
        android:layout_height="fill_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <com.dkhs.portfolio.ui.FloatingActionMenu
        android:id="@+id/floating_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />
</RelativeLayout>
