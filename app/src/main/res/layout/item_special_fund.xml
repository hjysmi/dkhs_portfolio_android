<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/combin_horSpacing"
        android:background="@color/theme_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_border_gray"
        android:orientation="vertical"
        android:paddingTop="16dp">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/widget_padding_medium"
            android:paddingRight="@dimen/widget_padding_medium">

            <TextView
                android:id="@+id/abbr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/type_red_dot_bg"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <!--<TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/tag_gray"
                android:textSize="10sp" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:paddingLeft="@dimen/widget_padding_medium">

            <TextView
                android:id="@+id/tv_discount_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fund_discount"
                android:textColor="@color/tag_gray"
                android:textSize="10sp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_discount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ll_tag_height"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/widget_padding_medium" />

        <View
            style="@style/divider_line"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/widget_padding_medium"
            android:paddingRight="@dimen/widget_padding_medium">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rateTV"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/rate"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:textColor="@color/tag_gray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/cp_rate"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/null_number"
                        android:textSize="24sp" />

                </LinearLayout>

                <!-- <View
                     style="@style/vertical_divider_line"
                     android:layout_marginBottom="12dp"
                     android:layout_marginTop="12dp"
                     android:alpha="0.6"

                     android:background="@color/md_grey_800" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sh300"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="@string/sh300"
                        android:textColor="@color/tag_gray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/sh_rate"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:text="@string/null_number"
                        android:textSize="20sp" />

                </LinearLayout>
                <!--<View
                    style="@style/vertical_divider_line"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:alpha="0.6"

                    android:background="@color/md_grey_800" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/win_market"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/win_market"
                        android:textColor="@color/tag_gray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/win_rate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:text="@string/null_number"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_image_right" />
        </RelativeLayout>

        <View
            style="@style/divider_line"
            android:layout_marginTop="4dp" />

        <!--<LinearLayout
            android:id="@+id/ll_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ll_chart_switch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chart_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="2dp"
                android:paddingLeft="8dp"
                android:text="@string/expend_benefit_curve"
                android:textColor="@color/theme_color" />

        </LinearLayout>-->
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/widget_margin_medium"
            android:background="@drawable/btn_red_selector"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/float_menu_buyfund"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>