<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_white_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_market_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/list_text_size"
            tools:text="text" />

        <TextView
            android:id="@+id/option_news_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/adapter_market_title"
            android:paddingTop="@dimen/text_date_paddint"
            android:singleLine="true"
            android:textColor="@color/position_text_lgray"
            android:textSize="@dimen/setting_text_phone"
            tools:text="text" />
    </RelativeLayout>

    <!-- <include layout="@layout/layout_line" /> -->

</LinearLayout>

