<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="SZ600123"
        android:textColor="@color/darker_gray"
        app:layout_heightPercent="10%w"
        app:layout_marginLeftPercent="5%w"
        app:layout_textSizePercent="4.5%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_code"
        android:gravity="center_vertical"
        android:text="厦门发展"
        app:layout_heightPercent="10%w"
        app:layout_marginLeftPercent="3%w" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_add"
        app:layout_marginRightPercent="5%w" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5px"
        android:layout_alignParentRight="true"
        android:background="@color/drivi_line"
        app:layout_widthPercent="95%w" />
</com.android.percent.PercentRelativeLayout>