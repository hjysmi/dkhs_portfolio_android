<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lv_white_selector"
    android:orientation="horizontal">

    <include
        android:id="@+id/ll_avatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        layout="@layout/layout_avatar_mark_v" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/CommonTextAppearance_Middle_Black"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_friends"
            style="@style/CommonTextAppearance_Mini_Gray"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/tv_followers"
            style="@style/CommonTextAppearance_Mini_Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_friends" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="3dp"
        android:src="@drawable/setting_image_right" />

</LinearLayout>