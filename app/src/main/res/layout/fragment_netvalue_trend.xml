<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-1dp"
    android:layout_marginRight="-1dp"
    android:layout_marginTop="-1dp"
    android:background="@drawable/btn_white_grayborder_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tv_combination_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_blue"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tv_follow"
            style="@style/hw_wrap"
            android:text="关注人数"
            android:textColor="@color/white_60"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_follow_num"
            style="@style/hw_wrap"
            android:layout_alignBottom="@+id/tv_follow"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_follow"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_income"
            style="@style/hw_wrap"
            android:layout_below="@+id/tv_follow"
            android:layout_marginTop="8dp"
            android:text="总收益"
            android:textColor="@color/white_60"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_income_netvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_income"
            android:layout_marginTop="-8dp"
            android:gravity="bottom"
            android:text="—"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <LinearLayout
            android:id="@+id/tab_netvalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_income_netvalue"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netvalue_button_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    android:textColor="@color/white_60"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/netvalue_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:text="—"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/divider_line"
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@color/zuhe_divline" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netvalue_button_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周"
                    android:textColor="@color/white_60"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/netvalue_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:text="—"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/divider_line"
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@color/zuhe_divline" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netvalue_button_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textColor="@color/white_60"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/netvalue_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:text="—"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/divider_line"
                android:layout_width="0.5dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@color/zuhe_divline" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_his_netvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="净值"
                    android:textColor="@color/white_60"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_history_netvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:text="—"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            style="@style/hw_wrap"
            android:layout_below="@+id/tab_netvalue"
            android:layout_marginTop="15dp"
            android:text="描述："
            android:textColor="@color/white_60"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_desc_text"
            style="@style/hw_wrap"
            android:layout_alignBottom="@+id/tv_desc"
            android:layout_toRightOf="@+id/tv_desc"
            android:text="描述内容"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <com.android.percent.PercentRelativeLayout
        android:id="@+id/rl_create_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lv_white_selector"
        android:clickable="true">

        <include
            android:id="@+id/ll_avatar"
            layout="@layout/layout_avatar_mark_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="13%w"
            app:layout_marginBottomPercent="2%w"
            app:layout_marginLeftPercent="2%w"
            app:layout_marginTopPercent="2%w"
            app:layout_widthPercent="13%w" />

        <com.android.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="10%w">

            <TextView
                android:id="@+id/tv_combination_user"
                style="@style/CommonTextAppearance_Middle_Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:layout_heightPercent="50%h"
                app:layout_marginLeftPercent="170%h"
                app:layout_textSizePercent="40%h"
                tools:text="远去的马蹄" />

            <TextView
                android:id="@+id/tv_user_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_combination_user"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:text="还没有描述呢"
                android:textColor="@color/combition_gray"
                app:layout_heightPercent="50%h"
                app:layout_marginLeftPercent="170%h"
                app:layout_textSizePercent="30%h" />
        </com.android.percent.PercentRelativeLayout>

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/setting_image_right"
            app:layout_heightPercent="5%w"
            app:layout_marginRightPercent="3%w"
            app:layout_widthPercent="3%w" />
    </com.android.percent.PercentRelativeLayout>

    <!-- <View style="@style/divider_line" /> -->

    <com.dkhs.portfolio.ui.widget.HScrollTitleView
        android:id="@+id/hs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <FrameLayout
        android:id="@+id/rl_trend_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp" />


</com.android.percent.PercentLinearLayout>