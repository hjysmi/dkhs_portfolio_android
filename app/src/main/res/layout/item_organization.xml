<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <com.android.percent.PercentLinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/theme_gray"
        >

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="6%w"
            app:layout_widthPercent="5%w" />

        <TextView
            android:id="@+id/catalog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:textColor="#454545"
            app:layout_heightPercent="6%w"
            app:layout_textSizePercent="3%w"
            tools:text="A" />
    </com.android.percent.PercentLinearLayout>


    <com.android.percent.PercentFrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            app:layout_heightPercent="6%w"
            app:layout_widthPercent="5%w" />

        <TextView
            android:id="@+id/tv_organization"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            app:layout_heightPercent="10%w"
            app:layout_marginLeftPercent="5%w"
            tools:text="国金证券" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom|right"
            android:background="@color/gray_textcolor"
            app:layout_widthPercent="95%w" />
    </com.android.percent.PercentFrameLayout>


</com.android.percent.PercentRelativeLayout>