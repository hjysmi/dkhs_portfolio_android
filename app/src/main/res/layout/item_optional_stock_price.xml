<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_white_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="5dp"
    android:weightSum="7.4" >

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/tv_stock_name"
            style="@style/hw_wrap"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_stock_num"
            style="@style/hw_wrap"
            android:layout_below="@+id/tv_stock_name"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_current_value"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_weight="2"
        android:gravity="right"
        android:textColor="@color/red"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.4" >

        <TextView
            android:id="@+id/tv_percent_value"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/red"
            android:gravity="center"
            android:text="+0.43%"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_increase_value"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="103.16"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>