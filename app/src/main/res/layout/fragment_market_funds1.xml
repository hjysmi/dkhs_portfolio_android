<?xml version="1.0" encoding="utf-8"?>
<com.dkhs.portfolio.ui.widget.MySwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.percent.PercentLinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/person_setting_backgroud"
            android:orientation="vertical">

            <include
                layout="@layout/market_fund_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/combin_horSpacing"
                android:background="@color/person_setting_backgroud" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_fund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/combin_horSpacing"
                android:background="@color/person_setting_backgroud" />

            <include
                layout="@layout/market_fund_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/combin_horSpacing"
                android:background="@color/person_setting_backgroud" />

            <include
                layout="@layout/market_fund_special"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/combin_horSpacing"
                android:background="@color/person_setting_backgroud" />

            <RelativeLayout
                android:id="@+id/rl_fund_manager"
                style="@style/item_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lv_white_selector"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/setting_image_right"
                    android:text="@string/more"
                    android:textColor="@color/gray_textcolor" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/fund_manager"
                    android:textColor="@color/black" />
            </RelativeLayout>

            <HorizontalScrollView
                style="@style/item_padding"
                android:paddingLeft="0dp"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:id="@+id/ll_fundmanager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/combin_horSpacing"
                android:background="@color/person_setting_backgroud" />
            <include
                layout="@layout/market_fund_special_financing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.android.percent.PercentLinearLayout>
    </ScrollView>

</com.dkhs.portfolio.ui.widget.MySwipeRefreshLayout>
