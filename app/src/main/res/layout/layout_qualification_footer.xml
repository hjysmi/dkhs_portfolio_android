<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/line">

    <RelativeLayout
        android:id="@+id/rl_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="介绍下自己"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            />
        <com.dkhs.portfolio.ui.widget.DKHSEditText
            android:layout_below="@+id/tv_title"
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fadingEdge="none"
            android:gravity="top"
            android:hint="为给投资人提供更好的服务,请填写能证明您投资能力的资料"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:lineSpacingExtra="3.0dip"
            android:minHeight="100dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:textColorHint="#c8c8c8"
            android:textSize="16sp">

            <requestFocus />
        </com.dkhs.portfolio.ui.widget.DKHSEditText>

        <com.dkhs.portfolio.ui.widget.GridViewEx
            android:id="@+id/gv_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_content"
            android:layout_margin="5dp"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:verticalSpacing="5dp" />

    </RelativeLayout>

    <com.android.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_et"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="包括且不限于:"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_marginTopPercent="5%w"
            app:layout_textSizePercent="3.5%w" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="1﹑私募基金管理人员证书;"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="3.5%w" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="2﹑投资经历(附个人实盘战绩截图,获奖证明);"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="3.5%w" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="3﹑个人博客﹑微博链接;"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="3.5%w" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="4﹑电视节目段﹑视频链接;"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="3.5%w" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="5﹑其他平台个人战绩﹑账号截图。"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="3.5%w" />


    </com.android.percent.PercentLinearLayout>
</com.android.percent.PercentRelativeLayout>