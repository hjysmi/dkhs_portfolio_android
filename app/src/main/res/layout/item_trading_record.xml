<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/lv_white_selector"
    android:paddingBottom="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp">
    <TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/text_content_color"
        android:textSize="14sp"
        android:id="@+id/tv_trading_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值"/>
    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/tv_trade_time"
        android:layout_below="@id/tv_trading_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/balance_title"
        android:textSize="12sp"
        android:text="05-16 11:02"/>

    <TextView
        android:textColor="@color/balance_in"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_trade_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="+100"/>

</RelativeLayout>
