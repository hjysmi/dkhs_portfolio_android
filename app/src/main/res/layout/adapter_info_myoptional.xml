<?xml version="1.0" encoding="utf-8"?>
<com.android.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/item_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lv_white_selector"
    android:orientation="vertical">

    <com.android.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.android.percent.PercentLinearLayout
            android:id="@+id/ll_related1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_related_stock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/widget_text_14sp" />

            <TextView
                android:id="@+id/tv_releated_stock_percent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_margin_normal"
                android:textSize="@dimen/widget_text_14sp" />

        </com.android.percent.PercentLinearLayout>

        <com.android.percent.PercentLinearLayout
            android:id="@+id/ll_related2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_related_stock2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/widget_text_14sp" />

            <TextView
                android:id="@+id/tv_releated_stock_percent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/widget_margin_normal"
                android:textSize="@dimen/widget_text_14sp" />

        </com.android.percent.PercentLinearLayout>

    </com.android.percent.PercentLinearLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_type"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/widget_text_14sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:textColor="@color/gray_textcolor"
        android:textSize="@dimen/widget_text_12sp"
        />

</com.android.percent.PercentLinearLayout>