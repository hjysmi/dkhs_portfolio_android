<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view"
        android:divider="@drawable/linear_layout_divider"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:paddingTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/tag_gray"

                android:text="组合名称"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tag_gray"
                android:text="创建时间"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/tag_gray"
                android:text="累积涨幅"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/combination1"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/combination_name1"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/creat_combination_name"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:id="@+id/combination_create_date1"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="创建时间"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/combination_value1"
                android:singleLine="true"
                android:text="@string/add_up_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/combination2"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:id="@+id/combination_name2"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/creat_combination_name"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/combination_create_date2"
                android:singleLine="true"
                android:text="创建时间"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/combination_value2"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/add_up_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:id="@+id/combination3"
            android:paddingBottom="8dp"
            >

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/combination_name3"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/creat_combination_name"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/combination_create_date3"
                android:singleLine="true"
                android:text="创建时间"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:id="@+id/combination_value3"
                android:text="@string/add_up_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:id="@+id/combination4"
            android:paddingBottom="8dp"
            >

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/combination_name4"
                android:singleLine="true"
                android:text="@string/creat_combination_name"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:id="@+id/combination_create_date4"
                android:text="创建时间"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/combination_value4"
                android:singleLine="true"
                android:text="@string/add_up_value"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:id="@+id/combination5"
            android:paddingBottom="8dp"
            >

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/combination_name5"
                android:singleLine="true"
                android:text="@string/creat_combination_name"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/combination_create_date5"
                android:singleLine="true"
                android:text="创建时间"/>

            <TextView
                style="@style/gray_title_text"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/combination_value5"
                android:singleLine="true"
                android:text="@string/add_up_value"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>