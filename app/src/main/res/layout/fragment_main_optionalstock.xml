<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/person_setting_backgroud" >

    <RelativeLayout
        android:id="@+id/rl_header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_color" >

        <Button
            android:id="@+id/btn_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/btn_back_selector"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:textColor="@color/white_textselector" />

        <Button
            android:id="@+id/btn_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            android:textColor="@color/white_textselector"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_header_right_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_header_right"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:text="编辑"
            android:textColor="@color/white_textselector"
            android:textSize="14sp" />

        <include
            android:id="@+id/titletab_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/layout_title_tab" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/view_datalist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header_title" />

</RelativeLayout>