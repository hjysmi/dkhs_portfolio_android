<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/person_setting_backgroud">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/tool"
        android:background="@color/title_color">
        <RelativeLayout
            android:id="@+id/rl_header_title"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/tool_bar_top_padding"
            android:layout_height="48dp">


        <TextView
            android:id="@+id/btn_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/tool_bar_menu"
            android:text="@string/edit"
            />

        <TextView
            android:id="@+id/btn_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            style="@style/tool_bar_menu"
            android:textSize="14sp" />


        <include
            android:id="@+id/titletab_view"
            layout="@layout/layout_main_market_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tool" />

</RelativeLayout>