<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_normal">

    <com.android.percent.PercentRelativeLayout
        android:id="@+id/rl_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_grayborder_selector"
        app:layout_marginTopPercent="5%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="搜索相关悬赏"
            android:textColor="@color/theme_blue"
            app:layout_heightPercent="10%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="5%w"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fundarrowright"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%w"
            app:layout_widthPercent="5%w"
            app:layout_heightPercent="5%w"/>
    </com.android.percent.PercentRelativeLayout>

    <com.android.percent.PercentRelativeLayout
        android:layout_below="@+id/rl_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_white_grayborder_selector"
        app:layout_marginTopPercent="5%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="搜索相关话题"
            android:textColor="@color/theme_blue"
            app:layout_heightPercent="10%w"
            app:layout_marginLeftPercent="5%w"
            app:layout_textSizePercent="5%w"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fundarrowright"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%w"
            app:layout_widthPercent="5%w"
            app:layout_heightPercent="5%w"/>
    </com.android.percent.PercentRelativeLayout>
</RelativeLayout>