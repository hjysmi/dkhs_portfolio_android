<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apo="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg_color">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_ll"
        style="@style/white_grayborder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="9dp">


            <ImageView
                android:id="@+id/iv_avatar"
                style="@style/lv_avatar_style" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:gravity="top"
                android:textColor="@color/black"
                android:textSize="@dimen/text_status_username" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_avatar"
                android:layout_toRightOf="@+id/iv_avatar"
                android:textColor="@color/gray_textcolor"
                android:textSize="@dimen/text_status_time" />

            <TextView android:id="@+id/tv_reward_amount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/reward_unit_on_going"
                android:text="å…ƒ"/>
            <TextView android:id="@+id/tv_reward_amount"
                android:layout_alignBaseline="@id/tv_reward_amount_unit"
                android:layout_toLeftOf="@id/tv_reward_amount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/reward_amount_on_going"
                />
            <ImageView
                android:layout_toLeftOf="@id/tv_reward_amount"
                android:layout_marginRight="5dp"
                android:id="@+id/iv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_money_highlight"/>
            <TextView
                android:id="@+id/tv_reward_state"
                android:layout_below="@id/tv_reward_amount"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/state_rewarding"
                />

        </RelativeLayout>


        <com.dkhs.portfolio.ui.widget.DKHSTextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/text_content_color"
            android:textSize="@dimen/text_status_title" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_img_thumbnail" />


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TableRow android:id="@+id/row1">

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                </TableRow>

                <TableRow android:id="@+id/row2">

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                </TableRow>

                <TableRow android:id="@+id/row3">

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v7"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v8"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1"

                        />

                    <com.dkhs.portfolio.ui.widget.ScaleImageView
                        android:id="@+id/v9"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_img_thumbnail"
                        apo:scale="1" />

                </TableRow>
            </TableLayout>


        </RelativeLayout>


        <View
            style="@style/divider_line"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_commend"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparency_gray_selector"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_commend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_coment"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/comment"
                    android:textColor="@color/tag_gray"
                    android:textSize="14sp" />
            </FrameLayout>

            <View
                style="@style/vertical_divider_line"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <FrameLayout
                android:id="@+id/fl_star"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparency_gray_selector"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:src="@drawable/praise" />

                    <TextSwitcher
                        android:id="@+id/tv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inAnimation="@anim/switch_bottom_in"
                        android:outAnimation="@anim/switch_top_out">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/like"
                            android:textColor="@color/tag_gray"
                            android:textSize="@dimen/text_status_like" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/like"
                            android:textColor="@color/tag_gray"
                            android:textSize="@dimen/text_status_like" />
                    </TextSwitcher>


                </LinearLayout>


            </FrameLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/def_item_pading"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/main_ll" />
</RelativeLayout>