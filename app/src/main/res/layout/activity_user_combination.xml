<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView

        android:id="@+id/sv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">
        <View
            android:id="@+id/v_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/user_combination_head_bg" />

        <ImageView
            android:id="@+id/iv_uheader"
            android:layout_width="@dimen/header_avatar_height"
            android:layout_height="@dimen/header_avatar_height"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="44dp"
            android:src="@drawable/ic_user_head" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_uheader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"

            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ll_symbols"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_symbols_prompt"
                    style="@style/user_tab_title"
                    android:text="@string/optional" />

                <TextView
                    android:id="@+id/tv_symbols"
                    style="@style/user_tab_content"
                    android:text="@string/null_number" />
            </LinearLayout>

            <View
                style="@style/vertical_divider_line"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/ll_following"
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    style="@style/user_tab_title"
                    android:text="@string/following" />

                <TextView
                    android:id="@+id/tv_following"
                    style="@style/user_tab_content"
                    android:text="@string/null_number" />
            </LinearLayout>

            <View
                style="@style/vertical_divider_line"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:id="@+id/ll_followers"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/user_tab_title"
                    android:text="@string/followers" />

                <TextView
                    android:id="@+id/tv_followers"
                    style="@style/user_tab_content"
                    android:text="@string/null_number" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/rl_user_info"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_combination_title"
            style="@style/gray_text_tabline"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/tag_gray"
                    android:text="TA的组合"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/moreBtn"
                    android:text="更多"

                    android:textColor="@color/tag_gray"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/combinationLL"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/tag_gray"
                    android:text="TA的主贴"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/more2Btn"
                    android:text="更多"

                    android:textColor="@color/tag_gray"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/topicsLL"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>       <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/tag_gray"
                    android:text="TA的回复"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/more3Btn"
                    android:text="更多"

                    android:textColor="@color/tag_gray"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/commendLL"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
<!--</android.support.v4.widget.NestedScrollView>    -->


    <com.dkhs.portfolio.ui.FloatingActionMenu
        android:id="@+id/floating_action_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

    <View
        style="@style/divider_line"
        android:alpha="0.2" />
</RelativeLayout>