    </style>

    <style name="CommonTextAppearance_Mini_Gray" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tag_gray</item>
    </style>

    <style name="CommonTextAppearance_Small_Gray" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tag_gray</item>
    </style>

    <style name="CommonTextAppearance_Middle_Gray" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
