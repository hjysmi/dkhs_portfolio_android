<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/gray_text_tabline"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/selectadapter_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_bg_color"
            android:orientation="horizontal" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_bg_color" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/adapter_line_height"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="6px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/theme_gray_press"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/selectadapter_parent_icon"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/adapter_line_height"
                    android:scaleType="fitXY"
                    android:src="@color/red" />
            </LinearLayout>
        </RelativeLayout>
        
    </LinearLayout>
    <!-- </HorizontalScrollView> -->
	
    <LinearLayout
        android:id="@+id/selectadapter_parent_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <com.dkhs.portfolio.ui.widget.ScrollViewPager
        android:id="@+id/selectadapter_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>