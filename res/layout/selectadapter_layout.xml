<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- <HorizontalScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/select_scroll"
        android:layout_height="wrap_content" > -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/selectadapter_parent_layout"
                android:layout_width="match_parent"
                android:background="@color/activity_bg_color"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_gray_press"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/selectadapter_parent_icon"
                    android:layout_width="80dp"
                    android:layout_height="5px"
                    android:scaleType="fitXY"
                    android:src="@color/red" />
            </LinearLayout>
        </LinearLayout>
    <!-- </HorizontalScrollView> -->

    <LinearLayout
        android:id="@+id/selectadapter_parent_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
	<com.dkhs.portfolio.ui.widget.ScrollViewPager
        android:id="@+id/selectadapter_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>