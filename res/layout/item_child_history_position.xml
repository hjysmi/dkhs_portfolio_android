<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dip"
    android:paddingRight="30dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_adjust_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30:50" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/dialog_item_log" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_adjust_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/adjust_time_divier"
                android:paddingTop="3dip"
                android:text="沪深大盘  从35%升至50% \n资金余额  从35%降至20%"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/blank_view1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/blank_view2"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:visibility="gone" />

</LinearLayout>