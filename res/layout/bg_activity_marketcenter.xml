<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.dkhs.portfolio"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.dkhs.portfolio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout style="@style/gray_text_tabline" >

                <TextView
                    android:id="@+id/tv_mainindex"
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/market_title_index" />

                <ImageButton
                    android:id="@+id/btn_more_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_more_selector" />
            </RelativeLayout>

            <com.dkhs.portfolio.ui.GridViewEx
                android:id="@+id/gv_mainindex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:padding="5dp"
                android:verticalSpacing="5dp" />

            <RelativeLayout style="@style/gray_text_tabline" >

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/market_title_hot" />

                <ImageButton
                    android:id="@+id/btn_more_plate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_more_selector" />
            </RelativeLayout>

            <com.dkhs.portfolio.ui.GridViewEx
                android:id="@+id/gv_plate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:padding="5dp"
                android:verticalSpacing="5dp" />

            <RelativeLayout style="@style/gray_text_tabline" >

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/market_title_up" />

                <ImageButton
                    android:id="@+id/btn_more_incease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_more_selector" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_market_incease"
                style="@style/listViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

            <RelativeLayout style="@style/gray_text_tabline" >

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/market_title_down" />

                <ImageButton
                    android:id="@+id/btn_more_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_more_selector" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_market_down"
                style="@style/listViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout style="@style/gray_text_tabline" >

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/market_title_turnover" />

                <ImageButton
                    android:id="@+id/btn_more_handover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_more_selector" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_market_handover"
                style="@style/listViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout style="@style/gray_text_tabline" >

                <TextView
                    style="@style/gray_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/market_title_ampli" />

                <ImageButton
                    android:id="@+id/btn_more_amplitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_more_selector" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_market_amplitude"
                style="@style/listViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>