<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
	<RelativeLayout 
	    android:layout_height="fill_parent"
	    android:layout_width="1dp"
	    android:layout_weight="3"
	    android:layout_marginBottom="8dp"
	    >
	    <com.dkhs.portfolio.ui.widget.TimesharingplanChartLand
        android:id="@+id/timesharingchart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
	    <include layout="@layout/progressbar"
        android:id="@android:id/progress"
	    android:visibility="gone"
        />
	</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_fiverange"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp" >
        

        <RelativeLayout
            android:id="@+id/layout_sell"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sell"
                android:textColor="@color/theme_gray"
                android:textSize="26sp" />

            <ListView
                android:id="@+id/list_five_range_sall"
                style="@style/listViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:orientation="vertical" />
        </RelativeLayout>

        <View
            android:id="@+id/view_divider"
            style="@style/divider_line"
            android:layout_width="88dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/layout_sell"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp" />

        <RelativeLayout
            android:id="@+id/layout_buy"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view_divider" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/buy"
                android:textColor="@color/theme_gray"
                android:textSize="26sp" />

            <ListView
                android:id="@+id/list_five_range_buy"
                style="@style/listViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:dividerHeight="0dp"
                android:orientation="vertical" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>