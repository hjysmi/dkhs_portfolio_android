<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:padding="30dp" >

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_account"
        android:layout_marginTop="10dip"
        android:background="@drawable/edittext_bg" >

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:text="手机号"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_phone"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/hint_mobile"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_verifycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:visibility="gone" >

        <Button
            android:id="@+id/button_getcode"
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_normal_blue"
            android:gravity="center"
            android:text="@string/get_code"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_verifycode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12sp"
            android:layout_toLeftOf="@+id/button_getcode"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/hint_verify_code"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/cb_agree_seletor"
        android:checked="true"
        android:padding="8dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/rlbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/btn_blue_selector"
        android:gravity="center"
        android:padding="6dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>