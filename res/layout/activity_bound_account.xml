<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/person_setting_backgroud"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/position_text_lgray"
        android:textSize="@dimen/list_text_size"
        android:text="@string/bound_account_notice"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        />
    
    <include layout="@layout/layout_line"/>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/bound_image_phone"
            android:src="@drawable/bound_image_phone"
            />
        <TextView 
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/bound_image_phone"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="手机"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/list_text_size"
            />
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bound_text_phone"
            android:text="123456789123"
            android:textColor="@color/position_text_lgray"
            android:textSize="@dimen/list_text_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/bound_image_email"
            android:src="@drawable/bound_image_email"
            />
        <TextView 
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/bound_image_email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="邮箱"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/list_text_size"
            />
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bound_text_email"
            android:text="点击绑定"
            android:textColor="@drawable/bound_button"
            android:textSize="@dimen/list_text_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/bound_image_qq"
            android:src="@drawable/bound_image_qq"
            />
        <TextView 
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/bound_image_qq"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="QQ"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/list_text_size"
            />
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bound_text_qq"
            android:text="点击绑定"
            android:textColor="@drawable/bound_button"
            android:textSize="@dimen/list_text_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/white"
        >
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/bound_image_weibo"
            android:src="@drawable/bound_image_weibo"
            />
        <TextView 
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/bound_image_weibo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="手机"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/list_text_size"
            />
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bound_text_weibo"
            android:text="点击绑定"
            android:textColor="@drawable/bound_button"
            android:textSize="@dimen/list_text_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
</LinearLayout>