<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <!-- 持仓组合 创建信息 -->

        <RelativeLayout
            android:id="@+id/portfolio_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_gray" >

            <TextView
                android:id="@+id/tv_portfolio_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="我的组合"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/tv_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成立时间  2014-8-10:10"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_netvalue_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_text"
                    android:layout_marginTop="3dp"
                    android:text="当日净值  "
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tv_today_netvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time_text"
                    android:layout_toRightOf="@+id/tv_netvalue_text"
                    android:text="1.1512"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- 持仓组合 创建信息 end -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/theme_color"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="我的配置"
            android:textColor="@color/white" />

        <!-- 净值占比饼图 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="140dp"
            layout="@layout/layout_pieview" />
        <!-- 净值占比饼图 End -->

        <View style="@style/divider_line" />

        <com.dkhs.portfolio.ui.widget.ListViewEx
            android:id="@+id/lv_optional_layout"
            style="@style/listViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btn_add_postional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_dashed_stroke"
            android:padding="8dp"
            android:text="+添加自选股" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_blue"
            android:padding="8dp"
            android:text="确定调整"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>