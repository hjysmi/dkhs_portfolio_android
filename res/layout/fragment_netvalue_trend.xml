<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_combination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="我的组合"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_combination_time"
            style="@style/hw_wrap"
            android:layout_alignBaseline="@+id/tv_combination_name"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_combination_name"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_combination_desc"
            style="@style/hw_wrap"
            android:layout_below="@+id/tv_combination_name"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View style="@style/divider_line" />

    <RelativeLayout
        android:id="@+id/tv_combination_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white" >
		<RelativeLayout 
			    android:layout_height="wrap_content"
			    android:layout_width="match_parent"
			    android:id="@+id/netvalue_layout"
			    android:paddingBottom="5dp"
			    android:paddingLeft="15dp"
			    android:paddingRight="15dp"
			    android:paddingTop="5dp"
			    android:layout_alignParentBottom="true"
			    >
			    <LinearLayout 
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:orientation="horizontal"
			        android:layout_alignParentLeft="true"
			        >
			        <Button
			            android:layout_height="30dp"
			            android:layout_width="30dp"
			            android:background="@drawable/netvalue_gray"
			            android:text="日"
			            android:textSize="14sp"
			            android:id="@+id/netvalue_button_day"
			            android:textColor="@color/gray_textcolor"
			            />
			        <TextView android:layout_height="wrap_content"
			            android:layout_width="wrap_content"
			            android:textSize="14sp"
			            android:layout_marginLeft="5dp"
			            android:id="@+id/netvalue_day"
			            android:textColor="@color/gray_textcolor"
			            />
			    </LinearLayout>
			    
			    <LinearLayout 
			        android:layout_alignParentRight="true"
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:orientation="horizontal"
			        >
			        <Button
			            android:layout_height="30dp"
			            android:layout_width="30dp"
			            android:background="@drawable/netvalue_gray"
			            android:text="月"
			            android:textSize="14sp"
			            android:id="@+id/netvalue_button_month"
			            android:textColor="@color/gray_textcolor"
			            />
			        <TextView android:layout_height="wrap_content"
			            android:layout_width="wrap_content"
			            android:textSize="14sp"
			            android:layout_marginLeft="5dp"
			            android:id="@+id/netvalue_month"
			            android:textColor="@color/gray_textcolor"
			            />
			    </LinearLayout>
			    <LinearLayout 
			        android:layout_height="wrap_content"
			        android:layout_width="wrap_content"
			        android:orientation="horizontal"
			        android:layout_centerHorizontal="true"
			        >
			        <Button
			            android:layout_height="30dp"
			            android:layout_width="30dp"
			            android:background="@drawable/netvalue_gray"
			            android:text="周"
			            android:textSize="14sp"
			            
			            android:id="@+id/netvalue_button_week"
			            android:textColor="@color/gray_textcolor"
			            />
			        <TextView android:layout_height="wrap_content"
			            android:layout_width="wrap_content"
			            android:textSize="14sp"
			            android:layout_marginLeft="5dp"
			            android:id="@+id/netvalue_week"
			            android:textColor="@color/gray_textcolor"
			            />
			    </LinearLayout>
			</RelativeLayout>
        <View
            android:id="@+id/divider_line"
            style="@style/divider_line"
            android:layout_width="0.0px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:paddingTop="5dp"
            android:layout_above="@id/netvalue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:layout_toRightOf="@+id/divider_line"
             >

            <ImageView
                android:id="@+id/tv_combination_image_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:visibility="gone"
                android:src="@drawable/tv_combination_currentnet" />

            

            <TextView
                android:id="@+id/tv_history_netvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:text="-"
                android:textColor="#979797"
                android:textSize="14sp" />
            <TextView
                android:layout_toLeftOf="@id/tv_history_netvalue"
                android:id="@+id/tv_history"
                style="@style/hw_wrap"
                android:paddingLeft="5dp"
                android:text="净值"
                android:textColor="#979797"
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_history"
                android:paddingLeft="5dp"
                android:text=" "
                android:textColor="#979797"
                android:textSize="35sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_above="@id/netvalue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/divider_line"
             >
			
            <ImageView
                android:id="@+id/tv_combination_image_uporlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
            	android:paddingTop="5dp"
                android:layout_toLeftOf="@id/tv_combination_image_uporlow" >

                <ImageView
                    android:id="@+id/tv_combination_image_totalnet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:src="@drawable/ic_networthrigth" />

                <TextView
                    android:id="@+id/tv_income"
                    style="@style/hw_wrap"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/tv_combination_image_totalnet"
                    android:paddingLeft="5dp"
                    android:text="@string/add_up_value"
                    android:textColor="#979797"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_income_netvalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_income"
                    android:paddingLeft="15dp"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="35sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/divider_line" />

    <com.dkhs.portfolio.ui.widget.HScrollTitleView
        android:id="@+id/hs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View style="@style/divider_line" />
	<RelativeLayout 
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    >

        

        <RelativeLayout
            android:id="@+id/rl_trend_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>
    <com.dkhs.portfolio.ui.widget.ScrollViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />

</LinearLayout>
