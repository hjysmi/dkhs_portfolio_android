<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/btn_edit_combinname"
            style="@style/hw_wrap"
            android:layout_alignParentRight="true"
            android:background="@drawable/action_alias" />

        <TextView
            android:id="@+id/tv_combination_time"
            style="@style/hw_wrap"
            android:layout_alignBaseline="@+id/btn_edit_combinname"
            android:layout_toLeftOf="@+id/btn_edit_combinname"
            android:text="成立时间:2014-08-15 12:30"
            android:textColor="@android:color/darker_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_combination_desc"
            style="@style/hw_wrap"
            android:layout_below="@+id/btn_edit_combinname"
            android:layout_marginTop="5dp"
            android:text="简介：发的佛教佛山大幅降低哦发"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_combination_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_edit_combinname"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/tv_combination_time"
            android:hint="我的组合"
            android:maxLength="8"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_combination_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_edit_combinname"
            android:layout_toLeftOf="@+id/tv_combination_time"
            android:singleLine="true"
            android:text="我的组合"
            android:textSize="15sp" />
    </RelativeLayout>

    <View style="@style/divider_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_gray" >

        <View
            android:id="@+id/divider_line"
            style="@style/divider_line"
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/divider_line"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_history"
                style="@style/hw_wrap"
                android:layout_centerHorizontal="true"
                android:text="累计净值增长(元)"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_history_netvalue"
                style="@style/hw_wrap"
                android:layout_below="@+id/tv_history"
                android:layout_centerHorizontal="true"
                android:text="10.1512"
                android:textColor="@color/red"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/divider_line"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_income"
                style="@style/hw_wrap"
                android:layout_centerHorizontal="true"
                android:text="累计收益"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_income_netvalue"
                style="@style/hw_wrap"
                android:layout_below="@+id/tv_income"
                android:layout_centerHorizontal="true"
                android:text="10.15%"
                android:textColor="@color/red"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/divider_line" />

    <com.dkhs.portfolio.ui.widget.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5" />

    <View style="@style/divider_line" />

    <com.dkhs.portfolio.ui.widget.ScrollViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>