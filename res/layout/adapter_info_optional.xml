<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lv_white_selector"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="【公告】"
        android:textColor="@color/black"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/adapter_market_title_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_type"
        android:singleLine="true"
        android:text="titlenum"
        android:textColor="@color/black"
        android:textSize="@dimen/list_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/adapter_market_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/adapter_market_title_num"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="@dimen/list_text_size" />

    <TextView
        android:id="@+id/tv_stockname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/adapter_market_title"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:text="股票名称"
        android:textColor="@color/position_text_lgray"
        android:textSize="@dimen/setting_text_phone" />

    <TextView
        android:id="@+id/option_news_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/adapter_market_title"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:text="titledate"
        android:textColor="@color/position_text_lgray"
        android:textSize="@dimen/setting_text_phone" />

    <TextView
        android:id="@+id/zhengquan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_market_title"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/option_news_text_date"
        android:text="zhengquan"
        android:textColor="@color/position_text_lgray"
        android:textSize="@dimen/setting_text_phone" />

</RelativeLayout>