<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:padding="30dp" >

    <!-- android:background="#FF9500" -->

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:drawableRight="@drawable/icon_user"
        android:hint="@string/hint_account"
        android:singleLine="true"
        android:text="1218229610@qq.com" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/edittext_bg"
        android:drawableRight="@drawable/icon_password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:text="123456" />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dip"
        android:clickable="true"
        android:text="@string/tv_forget_password"
        android:textColor="@drawable/text_color_selector"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/button_normal_blue"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cb_is_request_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否使用测试服务器" />

</LinearLayout>