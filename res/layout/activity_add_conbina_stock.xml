<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dkhs="http://schemas.android.com/apk/res/com.dkhs.portfolio"
    android:id="@+id/rl_base_add_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_gray" >

    <RelativeLayout
        android:id="@+id/rl_search_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/edittext_search_bg"
        android:focusableInTouchMode="true"
        android:layout_margin="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/search_purple" />

        <com.dkhs.portfolio.ui.widget.ClearableEditText
            android:id="@+id/et_search_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            dkhs:needVisible ="true"
            android:layout_toRightOf="@+id/iv_search"
            android:hint="@string/search_fund_hint"
            android:singleLine="true"
            android:textSize="16sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/rl_add_stocklist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_fund_height"
        android:layout_below="@+id/rl_search_stock"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:horizontalSpacing="3dp"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:padding="10dp"
        android:verticalSpacing="5dp" />

    <View
        android:id="@+id/divider_line"
        style="@style/divider_line"
        android:visibility="gone"
        android:layout_below="@+id/rl_add_stocklist" />

    <RelativeLayout
        android:id="@+id/rl_stock_searchview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_line"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_stock_rowview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider_line" >

        <LinearLayout
            android:id="@+id/indicator_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/popwindow_padding"
            android:paddingRight="@dimen/popwindow_padding" >

            <com.dkhs.portfolio.ui.widget.HScrollTitleView
                android:id="@+id/hs_title"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <Button
                android:id="@+id/btn_order"
                style="@style/hw_wrap"
                android:layout_width="0dip"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="月排行"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            style="@style/divider_line"
            android:layout_alignBottom="@+id/indicator_title" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/indicator_title" />
    </RelativeLayout>

</RelativeLayout>
