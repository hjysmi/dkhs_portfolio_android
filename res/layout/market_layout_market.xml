<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent" 
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/activity_bg_color"
        android:gravity="center_vertical"
        >
        <TextView  
            android:id="@+id/market_text_index"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:layout_weight="1.0"  
            android:gravity="center"  
            android:text=" 大盘名称"  
            android:textColor="#000000"  
            android:textSize="@dimen/list_text_size" />  
  
        <TextView  
            android:id="@+id/market_text_edition"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:layout_weight="1.0"  
            android:gravity="center"  
            android:text="指数"  
            android:textColor="#000000"  
            android:textSize="@dimen/list_text_size" />  
  		<LinearLayout 
  		    android:layout_height="fill_parent"
  		    android:layout_width="fill_parent"
  		    android:layout_weight="1.0"
  		    android:gravity="center"  
  		    android:orientation="horizontal"
  		    >
	        <TextView  
	            android:id="@+id/text3"  
	            android:layout_width="wrap_content"  
	            android:layout_height="wrap_content"  
	            android:textColor="#000000"  
	            android:text="涨跌幅"
	            android:textSize="@dimen/list_text_size" /> 
	            <ImageView 
	                android:paddingLeft="5dp"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:src="@drawable/market_icon_up"
	                />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        >
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:paddingLeft="20dp"
            >
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/list_text_size"
                android:text="沪深大盘"
                android:textColor="@color/black"
                />
            <TextView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="600123"
                android:textColor="@color/list_market_light_gray"
                android:textSize="@dimen/setting_text_phone"
                />
        </LinearLayout>
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1.0"  
            android:gravity="center" 
            android:id="@+id/market_list_item_index"
            android:textColor="@color/red"
            android:textSize="@dimen/list_text_size"
            android:text="3132.16"
            />
        <TextView 
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1.0"  
            android:gravity="center" 
            android:textSize="@dimen/list_text_size"
            android:id="@+id/market_list_item_percent"
            android:textColor="@color/red"
            android:text="+2.20%"
            />
    </LinearLayout>
</LinearLayout>