<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:id="@+id/market_layout_title"
        style="@style/gray_text_tabline"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/market_text_index"
            style="@style/gray_title_text"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:paddingLeft="4dp"
            android:text="@string/market_index_name" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/market_text_edition"
                style="@style/gray_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/market_current_value" />

            <ImageView
                android:id="@+id/market_icon_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:src="@drawable/market_icon_down"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/market_layout_upanddown"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="4dp" >

            <TextView
                android:id="@+id/market_text_change"
                style="@style/gray_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/market_icon_up_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:src="@drawable/market_icon_down" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_market"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>