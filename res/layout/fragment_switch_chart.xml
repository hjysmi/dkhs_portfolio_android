<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.dkhs.portfolio.ui.widget.Switch
        android:id="@+id/switch_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:isChecked="true"
        app:textLeft="曲线"
        app:textRight="报表" />

    <RelativeLayout
        android:id="@+id/chart_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/switch_chart" >
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dashline_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chart_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@+id/switch_chart"
        android:text="@string/tip_message_dashline"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>