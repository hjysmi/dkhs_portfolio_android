<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <!-- 明细日期 -->

        <Button
            android:id="@+id/btn_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_gray_border"
            android:drawableLeft="@drawable/ic_calender"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingTop="6dp" />

        <!-- 组合信息 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_gray" >

            <TextView
                android:id="@+id/tv_conbination_name"
                style="@style/hw_wrap"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="@string/combination_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_today_netvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/red"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_netvalue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/tv_today_netvalue"
                android:text="@string/today_netvalue"
                android:textColor="@android:color/darker_gray" />
        </RelativeLayout>

        <!-- 持仓配置 -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/theme_color"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="@string/my_config"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_adjust_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_gray_border"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="3dp"
                android:text="@string/adjust_position" />
        </RelativeLayout>
        <!-- 净值占比饼图 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="140dp"
            layout="@layout/layout_pieview" />

        <!-- 涨幅比列表 -->

        <com.dkhs.portfolio.ui.widget.ListViewEx
            android:id="@+id/lv_optional_layout"
            style="@style/listViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View style="@style/divider_line" />
        <!-- 净值贡献 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@color/theme_color"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="@string/netvalue_comtribute"
            android:textColor="@color/white" />

        <com.dkhs.portfolio.ui.widget.ListViewEx
            android:id="@+id/lv_contribute_layout"
            style="@style/listViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View style="@style/divider_line" />
        <!-- 调仓记录 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:background="@color/theme_color"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:text="@string/adjust_history"
            android:textColor="@color/white" />

        <com.dkhs.portfolio.ui.widget.ListViewEx
            android:id="@+id/lv_adjust_history"
            style="@style/listViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:dividerHeight="0dp"
            android:orientation="vertical" />
    </LinearLayout>

</ScrollView>