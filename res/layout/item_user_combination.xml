<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lv_white_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/lv_white_selector"
        android:gravity="center_vertical"
        android:paddingRight="15dp"
        android:layout_alignParentBottom="true"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_combination_name"
            style="@style/gray_title_text"
            android:layout_width="1dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/creat_fund_name" />

        <TextView
            style="@style/gray_title_text"
            android:id="@+id/tv_center_value"
            android:singleLine="true"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="创建时间" />

        <TextView
            style="@style/gray_title_text"
            android:layout_width="1dp"
            android:id="@+id/tv_right_value"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/add_up_value" />



    </LinearLayout>
</RelativeLayout>