<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_champion_combination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_order_header"
        android:gravity="center"
        android:singleLine="true"
        android:text="牛人基金1"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_gold_award"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_champion_combination"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-10dp"
        android:contentDescription="ddd"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gold_award"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_create_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_champion_combination"
        android:layout_toRightOf="@+id/iv_gold_award"
        android:singleLine="true"
        android:text="创建人:大牛"
        android:textColor="@color/darker_gray"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_user_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_user"
        android:layout_toRightOf="@+id/iv_gold_award" >

        <TextView
            android:id="@+id/tv_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="累计:"
            android:textColor="@color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_value_text"
            android:text="+21.52%"
            android:textColor="@color/def_red"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_user_desc"
        android:layout_marginTop="6dp"
        android:background="@color/theme_gray"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="描述：的反垄断法结束两地分居"
        android:textColor="@color/darker_gray"
        android:textColorHighlight="@color/darker_gray" />

</RelativeLayout>