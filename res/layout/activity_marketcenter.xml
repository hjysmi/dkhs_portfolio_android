<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
        android:layout_height="match_parent" 
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:background="@color/white"
    	xmlns:android="http://schemas.android.com/apk/res/android">
    	<LinearLayout  
        android:id="@+id/linearLayout1"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"
        android:background="@color/activity_bg_color"
         >  
  
        <TextView  
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/text1"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:layout_weight="1.0"  
            android:gravity="center"  
            android:text="国内指数" 
            android:textSize="@dimen/list_text_size" 
            android:textColor="#000000"  />  
  
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/text2"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:layout_weight="1.0"  
            android:gravity="center"  
            android:text="沪深指数"  
            android:textSize="@dimen/list_text_size"
            android:textColor="#000000"  />  
    </LinearLayout>  
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/activity_bg_color"
        >
    <ImageView 
        android:layout_width="80dp"  
        android:layout_height="wrap_content"  
        android:scaleType="fitXY"
        android:id="@+id/market_icon_cursor"
        android:src="@drawable/vpi__tab_selected_holo"
        />
    </LinearLayout>
    <include layout="@layout/layout_line"/>
    <LinearLayout 
        android:layout_below="@id/linearLayout1"
        android:id="@+id/market_layout_title"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/activity_bg_color"
        android:gravity="center_vertical"
        >
        <TextView  
            android:id="@+id/market_text_index"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:layout_weight="1.0"  
            android:gravity="center"  
            android:text="股指"  
            android:textColor="#000000"  
            android:textSize="@dimen/list_text_size" />  
  
        <TextView  
            android:id="@+id/market_text_edition"  
            android:layout_width="fill_parent"  
            android:layout_height="fill_parent"  
            android:layout_weight="1.0"  
            android:gravity="center"  
            android:text="最新"  
            android:textColor="#000000"  
            android:textSize="@dimen/list_text_size" />  
  		<LinearLayout 
  		    android:layout_height="fill_parent"
  		    android:layout_width="fill_parent"
  		    android:layout_weight="1.0"
  		    android:gravity="center"  
  		    android:id="@+id/market_layout_upanddown"
  		    android:orientation="horizontal"
  		    >
	        <TextView  
	            android:id="@+id/market_text_change"  
	            android:layout_width="wrap_content"  
	            android:layout_height="wrap_content"  
	            android:textColor="#000000"  
	            android:text="涨跌幅"
	            android:textSize="@dimen/list_text_size" /> 
	            <ImageView 
	                android:paddingLeft="5dp"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:id="@+id/market_icon_up_down"
	                android:src="@drawable/market_icon_down"
	                />
            </LinearLayout>
    </LinearLayout>
    
    <FrameLayout
        android:layout_below="@id/market_layout_title"
        android:id="@+id/view_datalist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>