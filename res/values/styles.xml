<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppThemeLight" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="com.dkhs.portfolio:switchStyle">@style/switch_light</item>
    </style>

    <style name="hw_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hw_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="hwrap_wfill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hfill_wwrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="dot_style">
        <item name="android:layout_width">12dip</item>
        <item name="android:layout_height">12dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="popwindow_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/popmore_textselector</item>
        <item name="android:background">@drawable/btn_pop_text_selector</item>
    </style>

    <style name="button_blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>

    <style name="listViewStyle">
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">0.5dip</item>
        <item name="android:childDivider">@null</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:gravity">center|fill</item>
    </style>

    <style name="combination_detail_bottom">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_backgroud</item>
    </style>

    <!-- 自定义dialog 没有背景样式 -->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/switch_textcolor</item>
    </style>

    <style name="switch_light">
        <item name="@attr/colorChecked">#FFFFFF</item>
        <item name="@attr/colorUnChecked">#181818</item>
        <item name="@attr/backgroundDrawable">@drawable/switch_bg</item>
        <item name="@attr/switchDrawable">@drawable/switch_thumb</item>
    </style>
    <!-- 用于自定义选择框 -->
    <style name="widget_gender_switch">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textOff">" "</item>
        <!-- 此设置不需要文字，只显示背景图的开关 -->
        <item name="android:textOn">" "</item>
        <item name="android:thumb">@drawable/switch_selector</item>
        <item name="android:switchMinWidth">0dp</item>
        <!-- 滑块格式9.png -->
        <!-- 用来控制背景图片和文字之间的间距来控制switch整体宽度 -->
        <item name="android:track">@drawable/switch_back_new</item>
        <!-- 背景图的开关 格式9.png -->
    </style>
    <!-- 人员设置界面字体样式 -->
    <style name="text_16_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 人员设置界面字体样式 -->
    <style name="text_18_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 人员设置界面checkbox所用样式 -->
    <style name="checkbox_setting" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/setting_checkbox_selector</item>
    </style>
    <!-- 设置密码界面checkbox所用样式 -->
    <style name="checkbox_password" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/password_checkbox_selector</item>
    </style>

    <style name="btn_login_blue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">@color/btn_blue_textselector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="text_stock_name">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/def_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_stock_value">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">-</item>
    </style>

    <style name="AnimationFade">

        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
        <item name="android:windowExitAnimation">@anim/menu_out</item>
    </style>

</resources>