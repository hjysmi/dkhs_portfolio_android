<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="hw_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hw_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="hwrap_wfill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="hfill_wwrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="dot_style">
        <item name="android:layout_width">12dip</item>
        <item name="android:layout_height">12dip</item>
        <item name="android:background">@drawable/dot_normal</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
    </style>

    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="popwindow_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/popmore_textselector</item>
        <item name="android:background">@drawable/btn_pop_text_selector</item>
    </style>

    <style name="button_blue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_blue_selector</item>
    </style>

    <style name="listViewStyle">
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">0.5dip</item>
        <item name="android:childDivider">@null</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:gravity">center|fill</item>
    </style>

    <style name="combination_detail_bottom">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tab_backgroud</item>
    </style>

</resources>