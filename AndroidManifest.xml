<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dkhs.portfolio"
    android:versionCode="1"
    android:versionName="0.4.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".app.PortfolioApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" -->

        <activity
            android:name="com.dkhs.portfolio.ui.SplashActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name="com.dkhs.portfolio.ui.MainActivity" /> -->
        <activity
            android:name="com.dkhs.portfolio.ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name="com.dkhs.portfolio.ui.NoAccountMainActivity" />
        <activity android:name="com.dkhs.portfolio.ui.RLFActivity" />
        <activity android:name="com.dkhs.portfolio.ui.SetPasswordActivity" />
        <activity android:name="com.dkhs.portfolio.ui.RegisterSuccessActivity" />
        <activity android:name="com.dkhs.portfolio.ui.GuideActivity" />
        <activity android:name="com.dkhs.portfolio.ui.LoginActivity" />
        <activity android:name="com.dkhs.portfolio.ui.FindPasswrodActivity" />
        <activity android:name="com.dkhs.portfolio.ui.SettingActivity" />
        <activity android:name="com.dkhs.portfolio.ui.MyCombinationActivity" />
        <activity android:name="com.dkhs.portfolio.ui.PositionAdjustActivity" />
        <activity android:name="com.dkhs.portfolio.ui.SelectStockActivity" />
        <activity android:name="com.dkhs.portfolio.ui.SelectFundActivity" />
        <activity android:name="com.dkhs.portfolio.ui.OptionalStockListActivity" />
        <activity android:name="com.dkhs.portfolio.ui.SelectAddOptionalActivity" />
        <activity android:name="com.dkhs.portfolio.ui.MarketCenterActivity" />
        <activity android:name="com.dkhs.portfolio.ui.OptionMarketNewsActivity" />
        <activity android:name="com.dkhs.portfolio.ui.SettingNameActivity" />
        <activity android:name="com.dkhs.portfolio.ui.NewsActivity" />
        <activity android:name="com.dkhs.portfolio.ui.FundsOrderActivity" />
        <activity android:name="com.dkhs.portfolio.ui.YanBaoActivity" />
        <activity
            android:name="com.dkhs.portfolio.ui.StockQuotesActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PageIndicatorDefaults" >
        </activity>
        <activity
            android:name="com.dkhs.portfolio.ui.CombinationDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dkhs.portfolio.ui.BaseSelectActivity"
            android:theme="@style/Theme.PageIndicatorDefaults"
            android:windowSoftInputMode="stateHidden" />

        <service android:name="com.dkhs.portfolio.service.LoadStockToDBService" />
    </application>

</manifest>